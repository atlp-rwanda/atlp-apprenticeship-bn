{
  "name": "atlp-apprenticeship-bn",
  "version": "1.0.0",
  "description": "ATLP Pulse Apprenticeship backend",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsc && node dist/index",
    "dev": "nodemon src/index.ts",
    "test": " nyc --reporter=lcov --reporter=html --reporter=text mocha ./src/test/*.test.ts --require @babel/register --exclude=\"src/server.ts\" --timeout 1000000 --exit ",
    "coverage": "nyc report --exclude=src/server.ts --reporter=lcov | coveralls",
    "lint": "eslint src",
    "build": "tsc"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/test/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "all": "true",
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlp-rwanda/atlp-apprenticeship-bn"
  },
  "keywords": [
    "ed-tech",
    "graphql",
    "typescript"
  ],
  "author": "ceelogre",
  "license": "ISC",
  "bugs": {
    "url": "git+https://github.com/atlp-rwanda/atlp-apprenticeship-bn"
  },
  "homepage": "https://github.com/atlp-rwanda/atlp-apprenticeship-bn#readme",
  "dependencies": {
    "@types/express": "^4.17.17",
    "apollo-server": "^3.9.0",
    "coveralls": "^3.1.1",
    "express": "^4.18.1",
    "graphql": "^16.5.0",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "@babel/register": "^7.22.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^13.13.15",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^5.2.2"
  }
}
